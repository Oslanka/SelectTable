<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FC"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="账号"
            android:inputType="text"
            android:maxLength="30"
            android:lines="1"
            android:textColor="#4a4a4a"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#EBEBEB" />
        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="用户昵称"
            android:inputType="text"
            android:maxLength="30"
            android:lines="1"
            android:textColor="#4a4a4a"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#EBEBEB" />

        <EditText
            android:id="@+id/et_psw_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入当前登录密码"
            android:inputType="textPassword"
            android:maxLength="30"
            android:lines="1"
            android:textColor="#4a4a4a"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#EBEBEB" />

        <EditText
            android:id="@+id/et_psw_new_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="设置新密码，1-20位"
            android:inputType="textPassword"
            android:maxLength="30"
            android:lines="1"
            android:textColor="#4a4a4a"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#EBEBEB" />

        <EditText
            android:id="@+id/et_check_psw_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="30"
            android:lines="1"
            android:hint="确认登录密码"
            android:textColor="#4a4a4a"
            android:textColorHint="#a0a0a0"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="1-20位"
        android:textColor="#b6b6b6"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/selector_next_button"
        android:enabled="false"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
